<HistoryTranslateScreen>:
    name: '_history_translate_screen_'
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 1
            orientation: "vertical"
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: history_translate_list
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "vertical"
            MDIconButton:
                id: remove_all_list_item
                icon: "delete"
                theme_icon_color: "Custom"
                icon_color: app.theme_cls.primary_color
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 0.1, 0.7
                on_release:
                    root.remove_all_list_item()
            MDLabel:
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
                text: "Delete All"
                allow_selection: True
                padding: "0dp", "0dp"
