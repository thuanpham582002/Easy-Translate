<TextTranslateScreen>:
    name: '_text_translate_screen_'
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        BoxLayout:
            size_hint: 1, 0.1
            orientation: "horizontal"
            MDIconButton:
                icon: "arrow-left"
                size_hint: 0.15, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release:
					root.manager.current = '_main_screen_'
            Label:
                size_hint: 0.8, 1
                text: "Easy Translate"
                color: 0, 0, 0, 1
            MDIconButton:
                id: link_detect
                icon: "link-variant"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 0.15, 1
                on_release:
                    root.show_detect_url()

        BoxLayout:
            size_hint: 1, 0.8
            orientation: "vertical"
            MDScreen:
                size_hint: 1, 0.5
                ScrollView:
                    id: scroll_view
                    MDTextField:
                        id: text_input
                        font_size: 26
                        hint_text: "Enter Text"
                        padding: 10
                        multiline: True
                MDFloatingActionButton:
                    id: translate_button
                    icon: "arrow-right"
                    pos: scroll_view.width - self.width, 0
                    on_release:
                        root.translate(text_input.text)
            ScrollView:
                size_hint: 1, .5
                MDTextField:
                    id: translated_text
                    font_size: 26
                    hint_text: "Translated text"
                    multiline: True
                    size_hint: 1, None

        BoxLayout:
            size_hint: 1, 0.1
            orientation: "vertical"
            BoxLayout:
                size_hint: 1, 0.3
                padding: 10
                MDRectangleFlatButton:
                    id: src_language
                    size_hint: 0.4, 1
                    text: "English"
                    on_release:
                        root.show_choose_language_screen('src')
                MDIconButton:
                    id: swap_language
                    icon: "swap-horizontal"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint: 0.2, 1
                    on_release:
                        root.swap_language()
                MDRectangleFlatButton:
                    id: dest_language
                    text: "Vietnamese"
                    size_hint: 0.4, 1
                    on_release:
                        root.show_choose_language_screen('dest')